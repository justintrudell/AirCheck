doctype html
html(lang="en")
  head
    title Aircheck
    //- meta(http-equiv='content-type', content='text/html; charset=utf-8')
    //- meta(name='description', content='')
    //- meta(name='keywords', content='')
    //if lte IE 8
    script(src='js/html5shiv.js')
    script(src='js/jquery.min.js')
    script(src='js/skel.min.js')
    script(src='js/skel-layers.min.js')
    script(src='js/init.js')
    //- link(href='bootstrap.css', rel='stylesheet')
    //- link(href='bootstrap.min.css', rel='stylesheet')
    //- link(href='font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')

    //- link(rel='stylesheet', href='css/skel.css')
    //- link(rel='stylesheet', href='css/style.css')
    //- link(rel='stylesheet', href='css/style-xlarge.css')

    link(href='style.css', rel='stylesheet')

  body#top
    div(class='se-pre-con')
    // Header
    header#header.skel-layers-fixed
      h1
        a Spaceapps 2016
      nav#nav
        ul
          li
            a#home Home
          li
            a.heatmap Map
          li
            a.form Report
          li
            a.twit Twitter
          li
            a(id='generateData', href='http://localhost:4567/generateUserData') Generate
    // Banner
    section#banner
      .inner
        h2 This is AirCheck
        p
          | Breathe easy.
        ul.actions
          li
            a.button.big.special.heatmap View map
          li
            a.button.big.form Report
    // One
    section#one.wrapper.style1
      header.major
        h2 Disease heatmap
      .container
        .row
          .12u
            section.special.box.status-wrapper
              #air-quality-status-wrapper
                h4.air-quality Air Quality:
                #air-quality-status.air-quality
              div(id='map')
        div(class='toggle')
          a.button(id='toggle_symptoms', class='toggle-btn') Toggle Symptoms
          a.button(id='toggle_temp', class='toggle-btn') Toggle Temperature
    // Two
    section#two.wrapper.style2
      header.major
        h2 Tell us how you're feeling
        p Help us crowdsource allergy and disease data
      .container
        .12u
          section.special
            iframe#my_typeform(src='https://jerry117.typeform.com/to/UlrIrF')
    // Three
    section#three.wrapper.style3
      header.major
        h2 Twitter updates
        p Tweet @idk to include data
      .container
        .12u
          section.special
            #twitter
    script(type='text/javascript', src='https://code.jquery.com/jquery-git.min.js')
    script(type='text/javascript', src='symptomsform.js')
    script(type='text/javascript', src='aircheckscript.js')
    script(type='text/javascript', src='google_maps_v2.js')
